<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PicACGComic" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowTranslucentStatus">true</item>
        
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor" tools:targetApi="s">@android:color/transparent</item>
        <item name="android:statusBarColor" tools:targetApi="s">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="s">?attr/isLightTheme</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="s">?attr/isLightTheme</item>
    
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">?attr/colorPrimary</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">400</item>
    </style>
    
    <style name="Theme.PicACGComic" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">400</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.PicACGComic</item>
    </style>
    
</resources>