<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pic" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- MaterialCardView -->
        <item name="materialCardViewStyle">@style/Widget.MaterialCardView</item>
        
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="s">?attr/isLightTheme</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="s">?attr/isLightTheme</item>
    </style>

    <style name="Theme.Pic" parent="Base.Theme.Pic" />
    
    <style name="Theme.Pic.Launcher" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?attr/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="duration">400</item>
        <item name="postSplashScreenTheme">@style/Theme.Pic</item>
    </style>
    
    <style name="Base.Theme.Pic.Commenting" parent="Theme.Material3.DayNight.DialogWhenLarge">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
    
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="s">?attr/isLightTheme</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="s">?attr/isLightTheme</item>
    
        <item name="android:windowEnterAnimation">@anim/nav_default_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nav_default_exit_anim</item>
        
        <item name="materialCardViewStyle">@style/Widget.MaterialCardView</item>
    </style>
    
    <style name="Theme.Pic.Commenting" parent="Base.Theme.Pic.Commenting" />

</resources>