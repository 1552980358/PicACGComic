<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pic" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- MaterialCardView -->
        <item name="materialCardViewStyle">@style/Widget.MaterialCardView</item>
        
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="s">?attr/isLightTheme</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="s">?attr/isLightTheme</item>
    </style>
    
    <style name="Base.Theme.Pic.Commenting" parent="Theme.Material3.DayNight.DialogWhenLarge">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="s">?attr/isLightTheme</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="s">?attr/isLightTheme</item>
        
        <item name="materialCardViewStyle">@style/Widget.MaterialCardView</item>
    </style>
    
</resources>