<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="kotlin.jvm.functions.Function2" />
        <import type="kotlin.Unit" />
        <import type="android.view.View" />
        <import type="androidx.databinding.ObservableArrayMap" />
        <import type="projekt.cloud.piece.pic.api.ApiComics.ComicsResponseBody.Data.Comics.Doc" />
        <import type="android.graphics.Bitmap" />
        
        <variable
            name="onClick"
            type="Function2&lt;View, Doc, Unit>" />
        
        <variable
            name="comic"
            type="Doc" />
        
        <variable
            name="coverImages"
            type="ObservableArrayMap&lt;String, Bitmap>" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:onClick="@{(view) -> onClick.invoke(view, comic)}"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardCornerRadius="@dimen/md_spec_radius_12"
        app:cardElevation="0dp"
        app:strokeWidth="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <projekt.cloud.piece.pic.widget.RatioImageView
                android:id="@+id/app_compat_image_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:shapeAppearance="@style/Widget.ShapeableImageView.RoundCorners.TopBottom"
                app:ratioX="3"
                app:ratioY="4"
                bitmap="@{coverImages[comic._id]}" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_compat_image_view"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/md_spec_spacing_hor_8"
                android:paddingVertical="@dimen/md_spec_spacing_ver_8">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/app_compat_image_view"
                    android:text="@{comic.title}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{comic.author}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>